<%= render 'shared/errors', obj: @user %>

<div class="row">
    <div class="col-xs-12">
<%= form_for(@user, :html => {class: "form-horizental", role: "form" }) do |f| %>
    <div class="form-group">
        <div class="control-label col-sm-2">
       <%= f.label :username %>
       </div>
       <div class="col-sm-12">
       <%= f.text_field :username, class: 'form-control', placeholder: 'Enter UserName' %>
        </div>
        </div>
        <div class="form-group">
        <div class="control-label col-sm-2">
      <%= f.label :email %>
      </div>
      <div class="col-sm-12">
      <%= f.email_field :email, class: 'form-control', placeholder: 'Enter Email' %>
        </div>
        </div>
        <div class="form-group">
        <div class="control-label col-sm-2">
      <%= f.label :password %></br>
      </div>
      <div class="col-sm-12">
      <%= f.password_field :password, class: 'form-control', placeholder: 'New password' %>
        </div>
        </div>
        
        <div class="form-group">
        <div class="col-sm-offset col-sm-12"></br>
       <%= f.submit(@user.new_record? ? "Signup" : "Update Account", class: 'btn btn-primary btn-lg') %> 
       </div>
       </div>
           
    
<% end %>
    <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to 'List Articles', articles_path %> ]
    </div>
</div>
</div>