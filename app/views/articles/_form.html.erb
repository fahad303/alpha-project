
<%= render 'shared/errors', obj: @article %>

<div class="row">
    <div class="col-xs-12">
<%= form_for(@article, :html => {class: "form-horizental", role: "form" }) do |f| %>
    <div class="form-group">
        <div class="control-label col-sm-12">
       <%= f.label :title %>
       </div>
       <div class="col-sm-12">
       <%= f.text_field :title, class: 'form-control', placeholder: '' %>
        </div>
        </div>
        <div class="form-group">
        <div class="control-label col-sm-12">
      <%= f.label :description %></br>
      </div>
      <div class="col-sm-12">
      <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: '' %>
        </div>
        </div>
        
        <div class="form-group">
            <div class="row">
                <div class="col-sm-offset-3 col-sm-8">
                   <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                       <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text } %>
                   <% end %>
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-12">
               <%= f.submit class: 'btn btn-primary btn-lg' %> 
            </div>
        </div>
           
    
<% end %>

    [ <%= link_to 'List Articles', articles_path %> ]

</div>
</div>